<!DOCTYPE html>
<html>
    <head>
        <%- include ../layouts/head %>
    </head>

    <body>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <%- include ../layouts/errors %>

                    <form method="post" action="/users/login" class="form-signin" name="login">
                        <h2 class="form-signin-heading">WebPonto - Autenticação</h2>
                        <label class="sr-only">Nome de usuário</label>
                        <input name="login" type="text" id="login" class="form-control" placeholder="Nome de usuário" required autofocus>
                        <label class="sr-only">Senha</label>
                        <input name="senha" type="password" id="inputPassword" class="form-control" placeholder="Senha" required>

                        <div class="checkbox">
                            <label>
                            <input type="checkbox" value="remember-me"> Lembrar-me
                            </label>
                        </div>

                        <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
                    </form>
                </div>
            </div>

            <%- include ../layouts/footer %>
        </div>
    </body>
</html>
