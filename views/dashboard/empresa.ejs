<!DOCTYPE html>
<html>
    <head>
        <%- include ../layouts/head %>
    </head>

    <body>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="container">
                        <div class="row text-center pad-top ">
                            <div class="col-md-12">
                                <h2>Página de cadastro do WebPonto</h2>
                            </div>
                        </div>

                        <div class="row pad-top">
                            <!--<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">-->
                            <div class="col-md-6 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                                <%- include ../layouts/errors %>

                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <strong> Inserir empresa </strong>
                                    </div>

                                    <div class="panel-body">
                                        <form method="post" action="/users/register"><br/>
                                            <div class="form-group input-group">
                                                <span class="input-group-addon"><i class="fa fa-pencil-square-o"></i></span>
                                                <input type="text" class="form-control" placeholder="Razão social" name="nome" />
                                            </div>

                                            <div class="form-group input-group">
                                                <span class="input-group-addon"><i class="fa fa-pencil-square-o"></i></span>
                                                <input type="text" class="form-control" placeholder="Nome fantasia" name="nome" />
                                            </div>

                                            <div class="form-group input-group">
                                                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                                <input type="text" class="form-control" placeholder="Responsável" name="nome" />
                                            </div>

                                            <hr/>

                                            <div class="form-group input-group">
                                                <span class="input-group-addon"><i class="fa fa-tag"></i></span>
                                                <input type="text" class="form-control" placeholder="CNPJ" name="login" />
                                            </div>

                                            <div class="form-group input-group">
                                                <span class="input-group-addon"><i class="fa fa-tag"></i></span>
                                                <input type="text" class="form-control" placeholder="Inscrição Estadual" name="login" />
                                            </div>

                                            <hr/>

                                            <div class="form-group form-inline input-group">
                                                <span class="input-group-addon"><i class="fa fa-location-arrow"></i></span>
                                                <input type="text" class="form-control" placeholder="CEP" name="cep" />

                                                <a href="#cep" class="input-group-addon btn-success">Buscar CEP</a>
                                            </div>

                                            <div class="form-group input-group">
                                                <span class="input-group-addon"><i class="fa fa-home"></i></span>
                                                <input type="password" class="form-control" placeholder="Número" name="senha" />
                                            </div>

                                            <div class="form-group input-group">
                                                <span class="input-group-addon"><i class="fa fa-institution"></i></span>
                                                <input type="password" class="form-control" placeholder="Complemento" name="senha" />
                                            </div>

                                            <hr/>

                                            <div class="form-group input-group">
                                                <span class="input-group-addon"><i class="fa fa-phone"></i></span>
                                                <input type="password" class="form-control" placeholder="Telefone" name="senha" />
                                            </div>

                                            <div class="form-group input-group">
                                                <span class="input-group-addon"><i class="fa fa-fax"></i></span>
                                                <input type="password" class="form-control" placeholder="Fax" name="confirmacao" />
                                            </div>

                                            <button class="btn btn-success" type="submit">Finalizar cadastro</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <%- include ../layouts/footer %>
        </div>
    </body>
</html>
